{
  "manifest_version": 3,
  "name": "Zone",
  "version": "1.0",
  "description": "Block distracting websites with accountability",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3033/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["contentScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
